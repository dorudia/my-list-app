{
  "expo": {
    "name": "My list",
    "slug": "crud_app",
    "icon": "./assets/icon.png",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ddia.lists-app",
      "infoPlist": {
        "NSUserTrackingUsageDescription": "Folosim notificări pentru a te anunța despre activitățile din aplicație."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.ddia.lists_app",
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#ffffff"
        }
      ],
      "expo-secure-store",
      [
        "react-native-android-widget",
        {
          "widgets": [
            {
              "name": "ClockWidget",
              "label": "Ceas & Vremea",
              "minWidth": "320dp",
              "minHeight": "180dp",
              "description": "Afișează ora, data și temperatura",
              "previewImage": "./assets/images/partial-react-logo.png"
            }
          ]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "bbf2edec-d220-4e46-8a0e-e850430f6928"
      },
      "EXPO_PUBLIC_API_URL": "https://my-list-app-server.onrender.com"
    },
    "owner": "ddia"
  }
}
